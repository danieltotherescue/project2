
<h2> <%= @post.title %> </h2>

<p><strong> <%= @user.name %></strong> needs help with:<br> <%= @post.description %> </p><br>
<% @post.replies.each do |reply| %>
  <strong> <%= reply.user.name %> said: </strong> <%= reply.content %><br> <strong> Image of solution? </strong> <%= reply.img %><br>
<% end %><br>

<% if current_user %>
  <% if current_user == @post.user %>
    <%= link_to "Edit this user post", edit_user_post_path(@user, @post) %>
    <%= link_to "Delete this User Profile!", user_path, method: :delete, data: { confirm: "Are you sure you want to delete this user?"} %>
  <% end %>

  <%= link_to "Back to the help list", user_posts_path(@user) %>
  <%= link_to "Get Help", new_user_post_path(@user) %>
  <%= link_to "Give Help", new_user_post_reply_path(@user, @post) %>
<% end %>
