<h1>Become a Helper!</h1>

<%= form_for @user do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :tel %>
        <%= f.text_field :tel %>
    </div>

    <div>
        <%= f.label :location %>
        <%= f.text_field :location %>
    </div>

    <div>
        <%= f.label :school %>
        <%= f.text_field :school %>
    </div>
    <div>
        <%= f.label :img %>
        <%= f.text_field :img %>
    </div>

    <%= f.submit "Sign up!" %>

<% end %>

<%= link_to "Back to the Help list!", users_path %>
